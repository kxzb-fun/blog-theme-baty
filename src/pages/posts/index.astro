---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Hero from "@components/Hero.astro";
const posts = await getCollection("posts");
const pageTitle = "我的 Astro 学习博客";
---

<Layout pageTitle={pageTitle}>
  <Hero />
  <Header />
  <main
    id="main-content"
    class="max-w-3xl mx-auto px-8 flex flex-col items-start"
  >
    <header class="text-[2rem] mt-8 mb-12">
      <h1>Posts</h1>
    </header>
    <ul>
      {
        posts.map((post) => (
          <li class="mb-[14px] text-[#777] text-sm">
            <a class="text-[#1095c1] text-base" href={`/posts/${post.slug}/`}>
              {post.data?.title}
            </a>
            - {post.data.pubDate} | {post.data.tags}
          </li>
        ))
      }
    </ul>
  </main>

  <Footer />
</Layout>
